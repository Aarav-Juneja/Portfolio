---
const { title, description, image } = Astro.props;
import { Image } from "astro:assets";
---

<div class="flex flex-row m-2 my-5">
    <div class="w-8/12">
        <h4>{title}</h4>
        <p>{description}</p>
    </div>
    <div class="w-1/3">
        <Image
            src={image}
            alt={title}
            inferSize={true}
            class="rounded-md mx-auto"
        />
    </div>
</div>
