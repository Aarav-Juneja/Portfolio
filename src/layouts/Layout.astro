---
import "../styles/global.css";
import { Icon } from "astro-icon/components";

// Technincally comptime, but hopefully that doesn't matter
const year = new Date().getFullYear();

interface Props {
    "navbar.shadow"?: true;
}

const props: Props = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <meta name="manifest" content="app.webmanifest" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <title>Aarav Juneja</title>
    </head>
    <body>
        <div class="flex flex-col min-h-screen">
            <nav
                class={"navbar absolute " +
                    (props?.["navbar.shadow"] && "shadow-md")}
            >
                <!-- Create Flex-1 dev to take over -->
                <div class="flex-1 ml-3">
                    <a href="/" class="font-semibold text-lg">Aarav Juneja</a>
                </div>
                <ul class="menu menu-horizontal">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li><a href="/blog">Blog</a></li>
                    <!-- <li>
                        <a href="/projects">Projects</a>
                    </li>
                    <li>
                        <a href="/contact">Contact</a>
                    </li> -->
                </ul>
            </nav>
            <!-- TODO: Find a better way to enforce a pt-12 -->
            <slot />
            <footer class="bg-blue-300 p-5 flex flex-row justify-center">
                Â© {year} Aarav Juneja.
                <a
                    href="https://linkedin.com/in/aarav-juneja"
                    aria-label="LinkedIn"
                    ><Icon name="mdi:linkedin" size={30} />
                </a>
                <a
                    href="https://discord.com/users/1042177742331981945"
                    aria-label="Discord"
                    ><Icon name="ic:baseline-discord" size={30} />
                </a>
            </footer>
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
